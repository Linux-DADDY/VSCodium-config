{
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.fontSize": 18,
  "window.menuBarVisibility": "toggle",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.cursorBlinking": "expand",
  "editor.formatOnType": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.activityBar.location": "side",
  "workbench.editor.showTabs": "multiple",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.fontFamily": "Dank Mono, JetBrains Mono",
  "editor.wordWrap": "on",
  "editor.fontLigatures": true,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Aura Dracula Spirit",
  "window.zoomLevel": 1,
  "workbench.tips.enabled": false,
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "never",
  "editor.lightbulb.enabled": false,
  "editor.hover.delay": 700,
  "editor.showFoldingControls": "never",
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.lineHeight": 1.5,
  "terminal.integrated.lineHeight": 1.8,
  "breadcrumbs.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none",
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "extensions.ignoreRecommendations": true,
  "workbench.colorCustomizations": {
    "editorSuggestWidget.selectedBackground": "#231739",
    "sideBar.background": "#140E1A",
    "list.activeSelectionBackground": "#231739",
    "list.inactiveFocusBackground": "#231739",
    "list.focusBackground": "#231739",
    "list.hoverBackground": "#231739",
    "terminalCursor.foreground": "#C45Dff"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "gutterpreview.imagePreviewMaxHeight": 100,
  "gutterpreview.imagePreviewMaxWidth": 100,
  "[css]": {
    "editor.defaultFormatter": "mblode.pretty-formatter"
  },
}
